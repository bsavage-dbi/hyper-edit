{
    "manifest_version": 2,
    "name": "Hyper Edit",
    "description": "Makes opening the Wordpress edit page even faster. Press alt + cmd + i to open the dev console and find the editor link.",
    "version": "1.1",
    "homepage_url": "https://github.com/kwaimind/hyper-edit",
    "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
    "content_scripts": [
    {
      "matches": ["*://www.hyperisland.com/*"],
      "js": ["app.js"]
    }
  ],
    "permissions": [
        "activeTab", "tabs", "*://www.hyperisland.com/*"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}
