{
	"manifest_version": 2,
	"name": "Hyper Edit",
	"description": "Makes opening the Wordpress edit page even faster. Click the HI icon and click on the button to open the editor page.",
	"version": "2.2",
	"homepage_url": "https://github.com/kwaimind/hyper-edit",
	"icons": {
		"16": "images/logo.png",
		"32": "images/logo.png",
		"48": "images/logo.png",
		"128": "images/logo.png"
	},
	"content_scripts": [
		{
			"matches": ["*://www.hyperisland.com/*"],
			"js": ["content.js"]
		}
	],
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "Hyper Edit"
	},
	"permissions": ["tabs"],
	"content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}
